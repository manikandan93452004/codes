import java.util.Scanner;
class main{
    public static void main (String[] args){
        Scanner Scan=new Scanner(System.in);
        System.out.println("enter the number");
        int a=Scan.nextInt();
        int sum=0;
        while(a>0){
            int dig=a%10;
            if(dig%2==0){
                sum=sum+dig;
                a=a/10;
            }
            System.out.println(sum);
        }
            }
}
        
