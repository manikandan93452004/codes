import java.util.Scanner;
class main{
    public static void main (String[] args){
        Scanner Scan=new Scanner(System.in);
        int n=Scan.nextInt();
        int sum=0;
        for(int i=0;i<=n;i++){
            if(i%2==0){
                sum=sum=i;
            }
        }
        System.out.println(sum);
    }
}
